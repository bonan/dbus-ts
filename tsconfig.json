{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "rootDir": "src",
    "sourceMap": true,
    "listFiles": false,
    "newLine": "LF",
    "noEmitOnError": true,
    "outDir": "lib",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "lib"]
}
